$degrees = unquote('10deg')
$degreesInvert = unquote('-10deg')

body
	background-color $white
	a
		color inherit

.page
	width 100%
	height 100vh
	position relative
	overflow-y auto
	overflow-x hidden

.inner
	padding 0 80px

#mouse
	display block
	size 30px
	z-index 9999
	fixed top -100px left -100px
	border 3px solid $white
	border-radius 100%
	transform translate(-50%, -50%)
	//transition transform 1s cubic-bezier(0.770, 0.000, 0.175, 1.000)
	pointer-events none
	//transition width .333s ease-in-out, height .333s ease-in-out, border .333s ease-in-out, background-color .333s ease-in-out
	&.clickAnim
		animation clickAnim .333s forwards
	&.enterAnim
		&:not(.clickAnim)
			animation enterAnim .333s forwards
	&.leaveAnim
		&:not(.enterAnim)
			animation leaveAnim .333s forwards


@keyframes enterAnim
	0%
		border-width 3px
		background-color transparent
	50%
		border-width 0
	100%
		border-width 0
		background-color rgba($black,.5)
		/*box-shadow 0 0 5px rgba(0,0,0,.6)
		background-color rgba(0,0,0,.5)*/


@keyframes leaveAnim
	0%
		border-width 0
		box-shadow 0 0 5px rgba(0,0,0,.6)
		background-color rgba(0,0,0,.5)
	100%
		border-width 3px
		background-color transparent

@keyframes clickAnim
	0%
		border-width 3px
	50%
		size 15px
		border-width 8px
	100%
		size 30px
		border-width 3px

header
	size 100% 100px
	.logo
		display block
		padding 25px 0
		margin 0 auto
		width 88px
	img
		height 50px
		object-fit contain

header, footer
	z-index 9
	width 100%
	position relative
/*header
	fixed top 0 left 0
	background-color $white*/
footer
	position relative
	.flex
		.column
			f 16, 100, 'regular2' lowercase $black
			// $white
			&:nth-child(2)
				text-align center
			&:nth-child(3)
				text-align right
	a
		display inline-block
		border 2px solid $blue
		padding 0 20px
		line-height 46px
		f $blue


// in PX
$hambSize = 100
$hambBarWidth = 28
$hambMinLeft = 80
$hambLeft = $hambMinLeft - (($hambSize - $hambBarWidth) / 2)

$hambBar1Top = ($hambSize / 2 - 13)
$hambBar2Top = ($hambSize / 2)
$hambBar3Top = ($hambSize / 2 + 13)
$hambBar1TopHover = ($hambSize / 2 - 6)
$hambBar3TopHover = ($hambSize / 2 + 6)

body .menu-open .hamburguer div
	&:nth-child(2)
		opacity 0
	&:nth-child(1), &:nth-child(3)
		top unit($hambBar2Top, 'px')
	&:nth-child(1)
		transform rotate(-45deg) translate3d(-55%,0,0)
	&:nth-child(3)
		transform rotate(45deg) translate3d(-46%,0,0)

.hamburguer
	size unit($hambSize, 'px')
	cursor pointer
	absolute top 0 left unit($hambLeft, 'px')
	transition all .2s ease-in-out
	&:hover
		div
			&:nth-child(1)
				top unit($hambBar1TopHover, 'px')
			&:nth-child(3)
				top unit($hambBar3TopHover, 'px')

	&:active
		div
			&:nth-child(2)
				opacity 0
			&:nth-child(1), &:nth-child(3)
				top unit($hambBar2Top, 'px')

	div
		size unit($hambBarWidth, 'px') 2px
		absolute left 50%
		transform translate3d(-50%,0,0)
		background-color $darkGray // $white
		transition all .2s ease-in-out
		transform-origin top left
		&:nth-child(1)
			top unit($hambBar1Top, 'px')
		&:nth-child(2)
			top unit($hambBar2Top, 'px')
		&:nth-child(3)
			top unit($hambBar3Top, 'px')









$_titlePadding = unit(40, 'px')
$_menuPadding = unit(20, 'px')

h1, h2
	position relative
	padding $_titlePadding
	f 40, 46, 'regular2' .1em $white nowrap

h1:after
	content ''
	size 100% 0px
	border-bottom 1px dotted
	absolute bottom 0 left 0

#content
	margin top -25px bottom -25px
	overflow hidden

.hoverSwitchCase
	position relative
	span
		display block
		opacity 1
		visibility visible
		transition all 0.2s ease-in-out
		&:first-child
			text-transform uppercase
		&:last-child
			text-transform lowercase
			visibility hidden
			opacity 0
	&:hover
		span
			&:first-child
				opacity 0
				visibility hidden
			&:last-child
				opacity 1
				visibility visible

.Tilt
	size 100% calc(100vh - 160px)
	position relative
	transform-style preserve-3d
	box-shadow 0 0 3px transparent // FF fix jagged edges

.TiltBackground
	size 100%
	overflow hidden
	position relative
	//background-color $darkGray // $greenLight
	.slide
		size 100%
		display block
		absolute top 0 left 0
		z-index 1
		&.left
			z-index 2
			size 125% 100%
			margin-left -75%
			//background-color $blue
			transform skew($degreesInvert)

		&.smooth
			transition all 1s cubic-bezier(.2,.8,.2,1)


.TiltOverlay
	user-select none
	z-index 4
	size 100%
	absolute top 0 left 0
	transform-style preserve-3d

	h1, h2
		span
			&:last-child
				width unquote('calc(100% - ' + $_titlePadding*2 + ')')
				absolute top $_titlePadding left $_titlePadding


.pageContent
	absolute top 0 left 0
	padding 25px 80px
	z-index 1
	size 100%
	opacity 1
	visibility visible
	transform-style preserve-3d
	transition opacity .13s ease-in-out, visibility .13s ease-in-out, top .33s ease-in-out, left .33s ease-in-out

	&.hidden
		pointer-events none
		z-index -1
		&:not(.home)
			opacity 0
			visibility hidden
		&.home
			top 0
			left 0
		&.menu
			top -100%
			left 0
		&.work
			top 0
			left 100%

.contentOverlay
	size 100%
	z-index 2
	absolute top 0 left 0
	transition opacity .13s ease-in-out, visibility .13s ease-in-out, transform .33s ease-in-out .33s

.home
	.TiltBackground
		background-color $darkGray

.home, .menu
	.contentOverlay
		size auto
		top 50%
		left 50%
		transform translate3d(-50%, -50%, 250px)
	&.hidden
		.contentOverlay
			opacity 0
			visibility hidden
			transform translate3d(-50%, -50%, 0px)

.menu
	.TiltOverlay
		ul li
			f 40, 46, 'regular2' .1em $white
			a
				display block
				width 100%
				padding $_menuPadding
				span
					&:last-child
						width unquote('calc(100% - ' + $_menuPadding*2 + ')')
						absolute top $_menuPadding left $_menuPadding
inputOnFocus($type = 0)
	background-color lighten($green, 30) unless $type == 1 // $gray-e
	background-color lighten($green, 20) unless $type == 0 // $gray-e
	& ~ .top-corner
		&:before, &:after
			top 10px
			left 10px!important
	& ~ .bottom-corner
		&:before, &:after
			bottom 10px
			right 10px
	& ~ label
		padding-left 15px
		//$black
		f 'bold' $white
		top -48px
		line-height 48px
		background-color lighten($green, 10) unless $type == 1 // $gray-d
		background-color lighten($green, 5) unless $type == 0 // $gray-e


cornersOnHover()
	.top-corner, .bottom-corner
		opacity 1
	.top-corner
		top 7px
		left 7px
	.bottom-corner
		bottom 7px
		right 7px

cornersOnActive()
	.top-corner
		top 13px
		left 13px
	.bottom-corner
		bottom 13px
		right 13px

menuIsActive()
	cornersOnActive()
	div
		&:nth-child(1)
			top 49px
		&:nth-child(2)
			opacity 0
		&:nth-child(3)
			top 49px
			

.top-corner, .bottom-corner
	size 36px
	position absolute
	transition all .2s ease-in-out
	&:before, &:after
		content ''
		position absolute
		background-color $blue15//$black-1
		transition all .2s ease-in-out
.top-corner
	top 0
	left 0
	&:before, &:after
		top 0
		left 0
	&:before
		size 36px 2px
	&:after
		size 2px 36px
	&.thin
		&:before
			height 1px
		&:after
			width 1px
.bottom-corner
	bottom 0
	right 0
	&:before, &:after
		bottom 0
		right 0
	&:before
		size 2px 36px
	&:after
		size 36px 2px
	&.thin
		&:before
			width 1px
		&:after
			height 1px

